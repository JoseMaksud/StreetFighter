@model IndexDto
@inject StreetFighter.Services.IStreetService service

@{
    ViewData["Title"] = "Home";
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Street Fighter</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-lg my-2 text-white bg-secondary btn-filter" onclick="filter('all')">Ver Todos</button>
                @foreach (var game in Model.Games)
                {
                    <button id="btn-@game.Name.ToLower()" class="btn btn-sm my-2 text-white btn-filter" onclick="filter('@game.Name.ToLower()')" style="background: @game.Logo;">@game.Name</button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var character in Model.Characters)
            {
                <div class="col">
                    <div class=""card shadow-sm cursor-pointer @string.Join(' ', character.Games).ToLower()" onclick="GetInfo(@character.Name)">
                      <img src="@character.Image" class="card-img-top" width="100%" height="300" alt="@character.Name">
                      <div class="card-body">
                          <p class="card-text mb-0">Nome @character.Name</p>
                          <h3 class="card-title">@character.Name</h3>
                          <div class="d-flex justify-content-between align-items-center">
                              <div class="btn-group">
                                  @foreach (var game in character.Game)
                                  {
                                      <a asp-action="Index" asp-route-game="@game.ToLower()" class="btn my-2 text-white" style="background:@service.GetGame(game).Logo">@game</a>
                                  }
                              </div>
                          </div>
                      </div>  
                    </div>
                </div>
            }
            <div id="zeroCharacter" class="col-lg-12 text-center">
                <h1 class="my-3 text-danger">Nenhum Character Encontrado</h1>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        let toFilter = '@Html.Raw(ViewData["Filter"])';
        filter(toFilter);
        function GetInfo(name) {
            window.location = '@Url.Action("Details", "Home")' + '?Name=' + name;
        }
    </script>
}